<Page x:Class="ManagementWpfApp.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManagementWpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="900"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="{StaticResource ColorAccent}" BorderThickness="2" CornerRadius="5" Padding="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Логин: " />
                        <TextBox Width="300" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Пароль:" Style="{StaticResource BlockCommon}" />
                        <PasswordBox Name="PasswordBoxInput" Width="300" PasswordChanged="PasswordBox_PasswordChanged" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <Button Content="Войти" Command="{Binding LoginCommand}" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Page>