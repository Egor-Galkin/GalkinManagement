<Page x:Class="ManagementWpfApp.Views.UserEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManagementWpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="900"
      Title="Форма пользователей">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="{StaticResource ColorAccent}" BorderThickness="2" CornerRadius="5" Padding="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Никнейм: " />
                        <TextBox Width="300" Text="{Binding CurrentUser.Nickname, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Логин: " />
                        <TextBox Width="300" Text="{Binding CurrentUser.Login, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Пароль: " />
                        <TextBox Width="300" Text="{Binding CurrentUser.Password, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Роль: " />
                        <ComboBox Width="300" Margin="5" ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole}" DisplayMemberPath="Name" IsEnabled="{Binding IsRoleEditable}" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <Button Content="Сохранить" Command="{Binding SaveCommand}" HorizontalAlignment="Right" Margin="5" />
        </StackPanel>
    </Grid>
</Page>