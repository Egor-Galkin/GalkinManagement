<Page x:Class="ManagementWpfApp.Views.TaskEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManagementWpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="900"
      Title="Форма задач">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="{StaticResource ColorAccent}" BorderThickness="2" CornerRadius="5" Padding="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Название: " />
                        <TextBox Width="300" Text="{Binding CurrentMission.Name, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Описание: " />
                        <TextBox Width="300" Height="100" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" TextAlignment="Left" VerticalContentAlignment="Top" Text="{Binding CurrentMission.Description, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Дата: " />
                        <DatePicker Width="300" Margin="5" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectedDate="{Binding CurrentMission.CreationDate, Mode=TwoWay}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Статус: " />
                        <CheckBox VerticalAlignment="Center" Content="завершённость" Margin="5" IsChecked="{Binding CurrentMission.Completed, Mode=TwoWay}" IsEnabled="{Binding IsCompletedEnabled}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Автор: " />
                        <ComboBox Width="300" Margin="5" ItemsSource="{Binding AllUsers}" SelectedItem="{Binding CurrentMission.Author, Mode=TwoWay}" DisplayMemberPath="Nickname" IsEnabled="False" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource BlockCommon}" Text="Исполнитель: " />
                        <ComboBox Width="300" Margin="5" ItemsSource="{Binding Employees}" SelectedItem="{Binding CurrentMission.Performer, Mode=TwoWay}" DisplayMemberPath="Nickname" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <Button Content="Сохранить" Command="{Binding SaveCommand}" HorizontalAlignment="Right" Margin="5" />
        </StackPanel>
    </Grid>
</Page>